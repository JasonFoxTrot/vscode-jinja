{
    "name": "jinja-yaml",
    "scopeName": "text.yaml.jinja",
    "comment": "Jinja with YAML",
    "fileTypes": [
        "sls",
        "yml.j2",
        "yml.jinja",
        "yml.jinja2",
        "yaml.j2",
        "yaml.jinja",
        "yaml.jinja2"
    ],
    "firstLineMatch": "^{% extends [\"'][^\"']+[\"'] %}",
    "patterns": [
        {
            "include": "source.jinja"
        },
        {
            "include": "source.yaml"
        }
    ]
}